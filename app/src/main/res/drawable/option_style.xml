<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Selected State -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#9E9E9E"/> <!-- Green when selected -->
            <stroke android:width="2dp" android:color="#FFFFFF"/>
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="#F8F8F8"/> <!-- Light background -->
            <stroke android:width="2dp" android:color="#CCCCCC"/> <!-- Gray border -->
            <padding android:left="16dp" android:right="16dp" android:top="10dp" android:bottom="10dp"/>
        </shape>
    </item>

</selector>
