<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent"/>
            <stroke android:width="15dp" android:color="#E0E0E0"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%" android:scaleGravity="center" android:useLevel="true">
            <shape android:shape="oval">
                <solid android:color="@android:color/transparent"/>
                <stroke android:width="15dp" android:color="#388E3C"/>
            </shape>
        </scale>
    </item>

</layer-list>
